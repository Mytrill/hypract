{
  "name": "hypract-internal",
  "private": true,
  "version": "0.0.6",
  "author": "Anthony Ferrando <ferrando.tony@gmail.com>",
  "homepage": "https://github.com/Mytrill/hypract",
  "bugs": {
    "url": "https://github.com/Mytrill/hypract/issues"
  },
  "scripts": {
    "clean": "lerna exec -- shx rm -rf dist",
    "prebuild": "npm run clean",
    "postbuild": "lerna exec -- shx rm -rf build .rpt2_cache",
    "build": "npm-run-all build:**",
    "build:umd": "npm run rollup",
    "build:umd:prod": "npm run rollup -- --suffix=.min --env=production --uglify=true",
    "build:es": "npm run rollup -- --format=es --suffix=.es --target=es6",
    "build:module": "npm run rollup -- --format=es --suffix=.module",
    "rollup": "lerna exec -- node ../../scripts/build.js"
  },
  "dependencies": {
    "@types/react": "15.6.2",
    "@types/react-dom": "15.5.4",
    "@types/react-redux": "5.0.5",
    "@types/redux-form": "7.0.3",
    "dot-prop-immutable": "1.3.1",
    "lodash-es": "4.17.4",
    "preact": "8.2.1",
    "preact-compat": "3.17.0",
    "react-redux": "5.0.6",
    "redux": "3.7.2",
    "redux-thunk": "2.2.0"
  },
  "devDependencies": {
    "@types/jest": "20.0.8",
    "@types/lodash": "4.14.73",
    "@types/lodash-es": "4.14.6",
    "babel": "6.23.0",
    "babel-plugin-external-helpers": "6.22.0",
    "babel-plugin-module-resolver": "2.7.1",
    "babel-preset-es2015": "6.24.1",
    "dts-bundle": "0.7.3",
    "jest": "20.0.4",
    "lerna": "2.1.2",
    "minimist": "1.2.0",
    "npm-run-all": "4.1.1",
    "rollup": "0.49.2",
    "rollup-plugin-babel": "3.0.2",
    "rollup-plugin-commonjs": "8.2.0",
    "rollup-plugin-replace": "2.0.0",
    "rollup-plugin-node-resolve": "3.0.0",
    "rollup-plugin-typescript2": "0.5.2",
    "rollup-plugin-uglify": "2.0.1",
    "shx": "0.2.2",
    "ts-jest": "20.0.14",
    "typescript": "2.4.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Mytrill/hypract.git"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "semi": false
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"]
  }
}
