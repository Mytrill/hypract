{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "target": "es5",
    "jsx": "react",
    "jsxFactory": "h",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "lib",
    "experimentalDecorators": true,
    "removeComments": true,
    "lib": [
      "es6",
      "es7",
      "dom"
    ]
  },
  "exclude": [
    "dist",
    "lib",
    "lib-esm",
    "node_modules",
    "examples"
  ]
}