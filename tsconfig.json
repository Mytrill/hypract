{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "hypract": ["packages/hypact/src"],
      "hypract-firebase-rest": ["packages/hypact-firebase-rest/src"]
    },
    "sourceMap": true,
    "declaration": true,
    "target": "es6",
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "lib": ["es6", "es2017", "dom"]
  },
  "include": ["packages/*/src"],
  "exclude": ["_ignore"]
}
